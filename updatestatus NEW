// @ts-nocheck
import React, { useContext, useState, useCallback } from "react";
import {
  View,
  Text,
  TouchableOpacity,
  Modal,
  StyleSheet,
  ScrollView,
  ActivityIndicator,
} from "react-native";
import { graphqlRequest } from "../services/api";
import { useNavigation, useRoute, useFocusEffect } from "@react-navigation/native";
import { UserContext } from "../components/ui/UserContext";

const STATUS_FLOW = [
  "PENDING",
  "STARTED",
  "REPAIRING",
  "TESTING",
  "READY_TO_DELIVER",
];

// Description & fake date for UI (replace with your backend date if needed)
const STATUS_DETAILS = {
  PENDING: { desc: "Request received.", date: "12 Dec 2025" },
  STARTED: { desc: "Technician assigned.", date: "13 Dec 2025" },
  REPAIRING: { desc: "Device is being repaired.", date: "14 Dec 2025" },
  TESTING: { desc: "Device is being tested.", date: "15 Dec 2025" },
  READY_TO_DELIVER: { desc: "Awaiting delivery.", date: "15 Dec 2025" },
};

export default function UpdateStatus() {
  const route = useRoute();
  const { repair } = route.params || {};
  const navigation = useNavigation();
  const { user } = useContext(UserContext);

  const [repairData, setRepairData] = useState({ ...repair });
  const [status, setStatus] = useState(String(repair?.status || "PENDING"));
  const [showModal, setShowModal] = useState(false);
  const [loading, setLoading] = useState(false);

  if (!repair) {
    return (
      <View style={styles.center}>
        <Text>No repair data provided!</Text>
      </View>
    );
  }

  const loadLatestRepair = async () => {
    try {
      const QUERY = `
        query GetRepair($id:String!){
          repairRequest(requestId:$id){
            requestId
            itemName
            problemDescription
            status
          }
        }
      `;

      const res = await graphqlRequest(QUERY, { id: repair.requestId });
      const fresh = res?.data?.repairRequest;

      if (fresh) {
        setRepairData({ ...fresh });
        setStatus(String(fresh.status));
      }
    } catch (err) {
      console.log("Failed to fetch updated repair:", err);
    }
  };

  useFocusEffect(
    useCallback(() => {
      loadLatestRepair();
    }, [])
  );

  const getStatusIndex = (s) => STATUS_FLOW.indexOf(s);

  const updateStatus = async (newStatus) => {
    setLoading(true);
    setStatus(newStatus);

    const MUTATION = `
      mutation UpdateRepairStatus($request_id:String!, $update_status:String!){
        updateRepairStatus(requestId:$request_id, updateStatus:$update_status){
          success
          message
          status
        }
      }
    `;

    try {
      const res = await graphqlRequest(MUTATION, {
        request_id: repair.requestId,
        update_status: newStatus,
      });

      const updated = res?.data?.updateRepairStatus?.status;
      if (updated) setStatus(updated);

      setShowModal(false);
    } catch (err) {
      console.log(err);
      alert("Failed to update status");
    } finally {
      setLoading(false);
    }
  };

  const totalAmount = (repairData.items || []).reduce(
    (sum, item) => sum + Number(item.amount || 0),
    0
  );

  return (
    <ScrollView style={styles.container}>
      <View style={{ marginTop: 10 }}>
        <Text style={styles.sectionTitle}>Repair Status</Text>

        {/* ---------------- VERTICAL TIMELINE ---------------- */}
        <View style={styles.timelineContainer}>
          {STATUS_FLOW.map((step, index) => {
            const stepIndex = getStatusIndex(status);
            const isCompleted = index < stepIndex;
            const isActive = index === stepIndex;

            return (
              <View key={index} style={styles.timelineItem}>
                {/* Circle */}
                <View
                  style={[
                    styles.circle,
                    isCompleted && styles.circleCompleted,
                    isActive && styles.circleActive,
                  ]}
                />

                {/* Line */}
                {index < STATUS_FLOW.length - 1 && (
                  <View
                    style={[
                      styles.line,
                      isCompleted && styles.lineCompleted,
                    ]}
                  />
                )}

                {/* Text Section */}
                <View style={{ marginLeft: 20 }}>
                  <Text style={styles.stepLabel}>{step.replace(/_/g, " ")}</Text>

                  <Text style={styles.stepDescription}>
                    {STATUS_DETAILS[step].desc}
                  </Text>

                  <Text style={styles.stepDate}>{STATUS_DETAILS[step].date}</Text>
                </View>
              </View>
            );
          })}
        </View>
      </View>

      {/* ---------------- ESTIMATION ---------------- */}
      <Text style={[styles.sectionTitle, { marginTop: 20 }]}>Estimation</Text>

      {(repairData.items || []).map((item, idx) => (
        <View key={idx} style={styles.row}>
          <Text>{item.description || "-"}</Text>
          <Text>₹{Number(item.amount ?? 0).toFixed(2)}</Text>
        </View>
      ))}

      <View style={styles.totalRow}>
        <Text style={styles.totalText}>Total:</Text>
        <Text style={styles.totalText}>₹{totalAmount.toFixed(2)}</Text>
      </View>

      {/* ---------------- ACTION BUTTONS ---------------- */}
      <TouchableOpacity
        style={styles.updateButton}
        onPress={() => setShowModal(true)}
      >
        <Text style={styles.updateButtonText}>Update Status</Text>
      </TouchableOpacity>

      {status === "READY_TO_DELIVER" && (
        <TouchableOpacity
          style={[styles.updateButton, { backgroundColor: "#3ff7ba", marginTop: 10 }]}
          onPress={() =>
            navigation.navigate("Invoice", { requestId: repair.requestId })
          }
        >
          <Text style={styles.updateButtonText}>Invoice</Text>
        </TouchableOpacity>
      )}

      {/* ---------------- MODAL ---------------- */}
      <Modal visible={showModal} transparent animationType="slide">
        <View style={styles.modalBackground}>
          <View style={styles.modalBox}>
            <Text style={styles.modalTitle}>Update Status</Text>

            {loading && <ActivityIndicator size="large" color="blue" />}

            {!loading &&
              STATUS_FLOW.map((s) => (
                <TouchableOpacity
                  key={s}
                  style={styles.modalOption}
                  onPress={() => updateStatus(s)}
                >
                  <Text style={{ fontSize: 16 }}>{s.replace(/_/g, " ")}</Text>
                </TouchableOpacity>
              ))}

            <TouchableOpacity
              onPress={() => setShowModal(false)}
              style={styles.cancelButton}
            >
              <Text style={styles.cancelText}>Cancel</Text>
            </TouchableOpacity>
          </View>
        </View>
      </Modal>
    </ScrollView>
  );
}

/* --------------------- STYLES --------------------- */

const styles = StyleSheet.create({
  container: { padding: 16, backgroundColor: "#fff" },
  center: { flex: 1, justifyContent: "center", alignItems: "center" },
  sectionTitle: { fontSize: 20, fontWeight: "bold", marginBottom: 10 },

  /* TIMELINE */
  timelineContainer: {
    marginTop: 15,
    paddingLeft: 10,
  },

  timelineItem: {
    flexDirection: "row",
    minHeight: 80,
    position: "relative",
    paddingBottom: 10,
  },

  circle: {
    width: 26,
    height: 26,
    borderRadius: 13,
    backgroundColor: "#fff",
    borderWidth: 2,
    borderColor: "#aeb7c4",
    zIndex: 3,
  },

  circleCompleted: {
    backgroundColor: "#1E90FF",
    borderColor: "#1E90FF",
  },

  circleActive: {
    backgroundColor: "#fff",
    borderColor: "#1E90FF",
  },

  line: {
    position: "absolute",
    width: 3,
    height: "100%",
    backgroundColor: "#d3d3d3",
    top: 26,
    left: 12,
  },

  lineCompleted: {
    backgroundColor: "#1E90FF",
  },

  stepLabel: {
    fontSize: 17,
    fontWeight: "bold",
  },

  stepDescription: {
    color: "#4a4a4a",
    fontSize: 13,
    marginTop: 2,
  },

  stepDate: {
    fontSize: 12,
    marginTop: 2,
    color: "gray",
  },

  /* ESTIMATION */
  row: {
    flexDirection: "row",
    justifyContent: "space-between",
    paddingVertical: 8,
    borderBottomWidth: 0.5,
    borderColor: "#ddd",
  },

  totalRow: {
    flexDirection: "row",
    justifyContent: "space-between",
    marginTop: 12,
  },

  totalText: { fontSize: 18, fontWeight: "bold" },

  /* BUTTONS */
  updateButton: {
    backgroundColor: "#4dd7ff",
    paddingVertical: 12,
    borderRadius: 8,
    marginTop: 20,
  },

  updateButtonText: {
    color: "black",
    fontWeight: "bold",
    textAlign: "center",
  },

  /* MODAL */
  modalBackground: {
    flex: 1,
    justifyContent: "flex-end",
    backgroundColor: "rgba(0,0,0,0.4)",
  },

  modalBox: {
    backgroundColor: "#fff",
    padding: 20,
    borderTopLeftRadius: 15,
    borderTopRightRadius: 15,
  },

  modalTitle: {
    fontSize: 18,
    fontWeight: "bold",
    marginBottom: 20,
  },

  modalOption: {
    paddingVertical: 14,
    borderBottomWidth: 1,
    borderColor: "#ddd",
  },

  cancelButton: {
    marginTop: 20,
    backgroundColor: "red",
    paddingVertical: 12,
    borderRadius: 8,
  },

  cancelText: {
    textAlign: "center",
    color: "#fff",
    fontWeight: "bold",
  },
});
