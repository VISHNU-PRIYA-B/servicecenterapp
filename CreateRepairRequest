// @ts-nocheck
import React, { useContext, useState } from "react";
import {View,Text,TextInput,TouchableOpacity,Modal,StyleSheet,Alert,} from "react-native";
import { graphqlRequest, setAuthToken } from "../services/api";
import { UserContext } from "../components/ui/UserContext";
import { useNavigation } from "@react-navigation/native";
import AsyncStorage from "@react-native-async-storage/async-storage";

export default function CreateRepairRequest() {
  const { token: contextToken } = useContext(UserContext);
  const [itemName, setItemName] = useState("");
  const [problemDescription, setProblemDescription] = useState("");
  const [contactInfo, setContactInfo] = useState("");
  const [popupVisible, setPopupVisible] = useState(false);
  const [loading, setLoading] = useState(false);

  const navigation = useNavigation();

  const handleCreate = async () => {
    if (!itemName.trim() || !problemDescription.trim() || !contactInfo.trim()) {
      Alert.alert("Please fill all fields");
      return;
    }

    let tokenToUse = contextToken || (await AsyncStorage.getItem("token"));
    if (!tokenToUse) return Alert.alert("Error", "You are not logged in");

    setAuthToken(tokenToUse);

    const query = `
      mutation CreateRepairRequest($itemName: String!, $problemDescription: String!, $contactInfo: String!) {
        createRepairRequest(
          itemName: $itemName,
          problemDescription: $problemDescription,
          contactInfo: $contactInfo
        ) {
          repairRequest {
            requestId
            status
            itemName
          }
        }
      }
    `;

    const variables = {
      itemName,
      problemDescription,
      contactInfo,
    };

    try {
      setLoading(true);
      const response = await graphqlRequest(query, variables, tokenToUse);

      if (response?.createRepairRequest?.repairRequest) {
        setPopupVisible(true);
        setItemName("");
        setProblemDescription("");
        setContactInfo("");
      } else {
        Alert.alert("Error", "Failed to create repair request");
      }
    } catch (err) {
      Alert.alert("Error", "Check the fields");
    } finally {
      setLoading(false);
    }
  };

  const handlePopupClose = () => {
    setPopupVisible(false);
    navigation.navigate("Profile");
  };

  return (
    <View style={styles.container}>
      <Text style={styles.title}>Create Repair Request</Text>

      <View style={styles.card}>
        
        <Text style={styles.label}>Item Name</Text>
        <TextInput
          style={styles.input}
          placeholder="Ex: Laptop / Phone / Smartwatch"
          placeholderTextColor="#777"
          value={itemName}
          onChangeText={setItemName}
        />

        <Text style={styles.label}>Problem Description</Text>
        <TextInput
          style={[styles.input, styles.textarea]}
          placeholder="Describe the problem..."
          placeholderTextColor="#777"
          value={problemDescription}
          onChangeText={setProblemDescription}
          multiline
        />

        <Text style={styles.label}>Contact Info</Text>
        <TextInput
          style={styles.input}
          placeholder="Phone Number"
          placeholderTextColor="#777"
          keyboardType="numeric"
          value={contactInfo}
          onChangeText={(text) => {
            const cleaned = text.replace(/[^0-9]/g, ""); // Remove non-digits
            setContactInfo(cleaned);
          }}
          maxLength={12}
        />

        <TouchableOpacity
          style={[styles.button, loading && { opacity: 0.6 }]}
          disabled={loading}
          onPress={handleCreate}
        >
          <Text style={styles.buttonText}>
            {loading ? "Submitting..." : "Submit Request"}
          </Text>
        </TouchableOpacity>
      </View>

      {/* SUCCESS POPUP */}
      <Modal transparent visible={popupVisible} animationType="fade">
        <View style={styles.popupContainer}>
          <View style={styles.popupBox}>
            <Text style={styles.popupTitle}>Request Submitted!</Text>
            <Text style={styles.popupMessage}>
              Your repair request has been submitted successfully.{"\n"}
              Waiting for admin approval.
            </Text>

            <TouchableOpacity style={styles.closeButton} onPress={handlePopupClose}>
              <Text style={styles.closeButtonText}>OK</Text>
            </TouchableOpacity>
          </View>
        </View>
      </Modal>
    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    padding: 20,
    backgroundColor: "#F4F7FA",
    flex: 1,
  },

  title: {
    fontSize: 26,
    fontWeight: "700",
    marginBottom: 15,
    textAlign: "center",
    color: "#2A2A2A",
  },

  card: {
    backgroundColor: "white",
    padding: 20,
    borderRadius: 15,
    shadowColor: "#000",
    shadowOpacity: 0.1,
    shadowRadius: 5,
    elevation: 4,
  },

  label: {
    fontSize: 15,
    fontWeight: "600",
    marginBottom: 5,
    color: "#444",
  },

  input: {
    borderWidth: 1,
    borderColor: "#DDD",
    padding: 12,
    borderRadius: 10,
    marginBottom: 15,
    backgroundColor: "#FFF",
    fontSize: 15,
  },

  textarea: {
    height: 90,
    textAlignVertical: "top",
  },

  button: {
    backgroundColor: "#3FF7BA",
    padding: 15,
    borderRadius: 10,
    alignItems: "center",
    marginTop: 5,
  },

  buttonText: {
    color: "black",
    fontSize: 17,
    fontWeight: "700",
  },

  popupContainer: {
    flex: 1,
    backgroundColor: "rgba(0,0,0,0.5)",
    justifyContent: "center",
    alignItems: "center",
  },

  popupBox: {
    width: "80%",
    backgroundColor: "white",
    padding: 25,
    borderRadius: 15,
    alignItems: "center",
  },

  popupTitle: {
    fontSize: 22,
    fontWeight: "700",
    marginBottom: 10,
    color: "green",
  },

  popupMessage: {
    fontSize: 16,
    textAlign: "center",
    marginBottom: 20,
    color: "#333",
  },

  closeButton: {
    backgroundColor: "#2D8CFF",
    paddingVertical: 10,
    paddingHorizontal: 35,
    borderRadius: 8,
  },
  closeButtonText: {
    color: "white",
    fontSize: 16,
  },
});
