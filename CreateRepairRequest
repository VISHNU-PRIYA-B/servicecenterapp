import React, { useContext, useState } from "react";
import { View, Text, TextInput, TouchableOpacity, Modal, StyleSheet, Alert } from "react-native";
import { graphqlRequest, setAuthToken } from "../services/api";
import { UserContext } from "../components/ui/UserContext";
import { useNavigation } from "@react-navigation/native";
import AsyncStorage from "@react-native-async-storage/async-storage";
import { StackNavigationProp } from "@react-navigation/stack";
import { RootStackParamList } from "@/App";

type CreateRequestNavProp = StackNavigationProp<
  RootStackParamList,
  "CreateRepairRequest"
>;

export default function CreateRepairRequest() {
  const { token: contextToken } = useContext(UserContext);
  const [itemName, setItemName] = useState("");
  const [problemDescription, setProblemDescription] = useState("");
  const [contactInfo, setContactInfo] = useState("");
  const [popupVisible, setPopupVisible] = useState(false);
  const [loading, setLoading] = useState(false);
  const navigation = useNavigation<CreateRequestNavProp>();

  const handleCreate = async () => {
    console.log("Submit button clicked");

    // Validate fields
    if (!itemName.trim() || !problemDescription.trim() || !contactInfo.trim()) {
      Alert.alert("Please fill all fields");
      return;
    }

    // Fetch token from context or AsyncStorage
    let tokenToUse = contextToken;
    if (!tokenToUse) {
      tokenToUse = await AsyncStorage.getItem("token");
    }

    if (!tokenToUse) {
      console.log("No JWT token found! Cannot create repair request.");
      Alert.alert("Error", "You are not logged in");
      return;
    }

    // Set JWT token in axios
    setAuthToken(tokenToUse);

    const query = `
      mutation CreateRepairRequest($itemName: String!, $problemDescription: String!, $contactInfo: String!) {
        createRepairRequest(
          itemName: $itemName,
          problemDescription: $problemDescription,
          contactInfo: $contactInfo
        ) {
          repairRequest {
            requestId
            status
            itemName
          }
        }
      }
    `;

    const variables = {
      itemName: itemName.trim(),
      problemDescription: problemDescription.trim(),
      contactInfo: contactInfo.trim(),
    };

    try {
      setLoading(true);
      console.log("Sending GraphQL request:", { query, variables });
      const response = await graphqlRequest(query, variables, tokenToUse);
      console.log("GraphQL response:", response);

      const createdRequest = response?.createRepairRequest?.repairRequest;
      if (createdRequest) {
        console.log("Repair request created successfully!", createdRequest);
        setPopupVisible(true);
        setItemName("");
        setProblemDescription("");
        setContactInfo("");
      } else {
        console.error("Failed to create repair request:", response);
        Alert.alert("Error", "Failed to create repair request");
      }
    } catch (err: any) {
      console.error("Error creating repair request:", err);
      Alert.alert("Error", err.message || "Failed to create repair request");
    } finally {
      setLoading(false);
    }
  };

  const handlePopupClose = () => {
    setPopupVisible(false);
    navigation.navigate("ApproveEstimation");
  };

  return (
    <View style={styles.container}>
      <Text style={styles.heading}>Create Repair Request</Text>

      <TextInput
        style={styles.input}
        placeholder="Item Name"
        value={itemName}
        onChangeText={setItemName}
      />

      <TextInput
        style={styles.input}
        placeholder="Problem Description"
        value={problemDescription}
        onChangeText={setProblemDescription}
      />

      <TextInput
        style={styles.input}
        placeholder="Contact Info"
        value={contactInfo}
        onChangeText={setContactInfo}
      />

      <TouchableOpacity
        style={[styles.button, loading && { opacity: 0.7 }]}
        onPress={handleCreate}
        disabled={loading}
      >
        <Text style={styles.buttonText}>{loading ? "Submitting..." : "Submit Request"}</Text>
      </TouchableOpacity>

      <TouchableOpacity
        style={styles.viewButton}
        onPress={() => navigation.navigate("ApproveEstimation")}
      >
        <Text style={styles.viewButtonText}>View Estimation</Text>
      </TouchableOpacity>

      {/* Success Popup */}
      <Modal transparent visible={popupVisible} animationType="fade">
        <View style={styles.popupContainer}>
          <View style={styles.popupBox}>
            <Text style={styles.popupTitle}>Request Submitted!</Text>
            <Text style={styles.popupMessage}>
              Your repair request has been submitted successfully.{"\n"}Waiting for approval.
            </Text>

            <TouchableOpacity style={styles.closeButton} onPress={handlePopupClose}>
              <Text style={styles.closeButtonText}>OK</Text>
            </TouchableOpacity>
          </View>
        </View>
      </Modal>
    </View>
  );
}

const styles = StyleSheet.create({
  container: { padding: 20, backgroundColor: "#F4F5F7", flex: 1 },
  heading: { fontSize: 22, fontWeight: "bold", marginBottom: 20, color: "#333", textAlign: "center" },
  input: { borderWidth: 1, borderColor: "#CCC", padding: 12, borderRadius: 10, marginBottom: 15, backgroundColor: "white" },
  button: { backgroundColor: "#2D8CFF", padding: 15, borderRadius: 10, alignItems: "center", marginTop: 5 },
  buttonText: { color: "white", fontSize: 17, fontWeight: "600" },
  viewButton: { backgroundColor: "#2D8CFF", padding: 15, borderRadius: 10, alignItems: "center", marginTop: 15 },
  viewButtonText: { color: "white", fontSize: 17, fontWeight: "600" },
  popupContainer: { flex: 1, backgroundColor: "rgba(0,0,0,0.5)", justifyContent: "center", alignItems: "center" },
  popupBox: { width: "80%", backgroundColor: "white", padding: 25, borderRadius: 15, alignItems: "center" },
  popupTitle: { fontSize: 20, fontWeight: "700", marginBottom: 10, color: "green" },
  popupMessage: { fontSize: 16, textAlign: "center", marginBottom: 20, color: "#333" },
  closeButton: { backgroundColor: "#2D8CFF", paddingVertical: 10, paddingHorizontal: 35, borderRadius: 8 },
  closeButtonText: { color: "white", fontSize: 16 },
});
